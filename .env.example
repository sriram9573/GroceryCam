# Firebase Client (Next.js)
NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# Backend API
PORT=3001
# Path to service account JSON for Firebase Admin & Google Cloud
GOOGLE_APPLICATION_CREDENTIALS=./service-account.json
# Or use specific vars if preferred/supported by your setup, but Google libs usually look for the above or specific env vars.

# Google Cloud / Vision
VISION_PROJECT_ID=your_project_id
VISION_LOCATION=us-central1

# Google AI Studio (Gemini)
GEMINI_API_KEY=your_gemini_api_key

# Firestore Emulator (Optional)
# FIRESTORE_EMULATOR_HOST=localhost:8080
